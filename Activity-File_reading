#include <stdio.h>
#include <stdlib.h>


float totalSale(float sales[], int n) {
    float total = 0.0f;
    for (int i = 0; i < n; i++) {
        total += sales[i];
    }
    return total;
}


float maxSale(float sales[], int n) {
    float max = sales[0];
    for (int i = 1; i < n; i++) {
        if (sales[i] > max) {
            max = sales[i];
        }
    }
    return max;
}

int main() {
    FILE *fp;
    int count = 0;
    float *sales;


    fp = fopen("sales.txt", "r");
    if (fp == NULL) {
        perror("Error opening file");
        return 1;
    }


    float temp;
    while (fscanf(fp, "%f", &temp) == 1) {
        count++;
    }

    if (count == 0) {
        printf("No sales data found.\n");
        fclose(fp);
        return 1;
    }


    sales = (float *)malloc(count * sizeof(float));
    if (sales == NULL) {
        printf("Memory allocation failed.\n");
        fclose(fp);
        return 1;
    }


    rewind(fp);
    for (int i = 0; i < count; i++) {
        fscanf(fp, "%f", &sales[i]);
    }


    float total = totalSale(sales, count);
    float maximum = maxSale(sales, count);

    printf("Total Sales: %.2f\n", total);
    printf("Maximum Sale: %.2f\n", maximum);


    free(sales);
    fclose(fp);

    return 0;
}
